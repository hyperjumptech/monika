#!/usr/bin/env node

const fs = require('fs')
const path = require('path')
const { exec } = require('child_process')
const project = path.join(__dirname, '../tsconfig.json')
const dev = fs.existsSync(project)


exec("ls -al /config", (error, stdout, stderr) => {
  console.log('Showing the content of /config')
  if (error) {
      console.log(`error: ${error.message}`);
      return;
  }
  if (stderr) {
      console.log(`stderr: ${stderr}`);
      return;
  }
  console.log(`stdout: ${stdout}`);
});

exec("cat /config/config.json", (error, stdout, stderr) => {
  console.log('Showing the content of /config/config.json')
  if (error) {
      console.log(`error: ${error.message}`);
      return;
  }
  if (stderr) {
      console.log(`stderr: ${stderr}`);
      return;
  }
  console.log(`stdout: ${stdout}`);
});

exec("env", (error, stdout, stderr) => {
  console.log('All environment variables')
  if (error) {
      console.log(`error: ${error.message}`);
      return;
  }
  if (stderr) {
      console.log(`stderr: ${stderr}`);
      return;
  }
  console.log(`stdout: ${stdout}`);
});


if (dev) {
  require('ts-node').register({ project })
}

require(`../${dev ? 'src' : 'lib'}`)
  .run()
  .catch(require('@oclif/errors/handle'))

/**
 * Show Exit Message
 */
process.on('SIGINT', () => {
  if (!process.env.DISABLE_EXIT_MESSAGE) {
    console.log('\nThank you for using Monika!')
    console.log('We need your help to make Monika better.')
    console.log(
      'Can you give us some feedback by clicking this link https://github.com/hyperjumptech/monika/discussions ?'
    )
    console.log('')
  }
  process.exit(process.exitCode)
})
