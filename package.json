{
  "name": "@hyperjumptech/monika",
  "description": "Synthetic monitoring made easy",
  "version": "1.3.6",
  "license": "MIT",
  "author": "@hyperjumptech",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "monika": "./bin/run"
  },
  "oclif": {
    "bin": "monika"
  },
  "keywords": [
    "monika",
    "cli",
    "monitoring"
  ],
  "scripts": {
    "preinstall": "node scripts/preinstall.js",
    "pretest": "npm run check-format",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "rm -rf lib && tsc -b && oclif-dev readme",
    "start": "./bin/run",
    "test": "cross-env NODE_ENV=test nyc --extension .ts mocha --forbid-only \"test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/plugin-help": "^3.2.2",
    "@sendgrid/mail": "^7.4.2",
    "@types/chai-spies": "^1.0.3",
    "axios": "^0.21.1",
    "boxen": "^5.0.0",
    "chokidar": "^3.5.1",
    "cli-table3": "^0.6.0",
    "cli-ux": "^5.5.1",
    "handlebars": "^4.7.7",
    "is-url": "^1.2.4",
    "joi": "^17.4.0",
    "mailgun-js": "^0.22.0",
    "node-notifier": "^9.0.1",
    "nodemailer": "^6.5.0",
    "open": "^8.0.6",
    "p-event": "^4.2.0",
    "pako": "^2.0.3",
    "pino": "6.11.2",
    "pino-pretty": "4.7.1",
    "smtp-server": "^3.8.0",
    "sqlite": "^4.0.21",
    "sqlite3": "^5.0.2",
    "tslib": "^1.14.1"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "@types/boxen": "^3.0.1",
    "@types/chai": "^4.2.15",
    "@types/is-url": "^1.2.29",
    "@types/mailgun-js": "^0.22.11",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.17.54",
    "@types/node-notifier": "^8.0.0",
    "@types/nodemailer": "^6.4.1",
    "@types/pako": "^1.0.1",
    "@types/pino": "^6.3.6",
    "@types/smtp-server": "^3.5.6",
    "@types/sqlite3": "^3.1.7",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^5.16.0",
    "eslint-config-oclif": "^3.1.0",
    "eslint-config-oclif-typescript": "^0.1.0",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^5.2.0",
    "nodemailer-mock": "^1.5.4",
    "nyc": "^14.1.1",
    "prettier": "2.2.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.9"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/scripts",
    "/db/migrations"
  ],
  "homepage": "https://github.com/https://github.com/hyperjumptech/monika",
  "bugs": "https://github.com/https://github.com/hyperjumptech/monika/issues",
  "repository": "https://github.com/hyperjumptech/monika",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "node scripts/add-license.js",
      "eslint --cache --fix"
    ],
    "*.{ts,js,css,md}": "prettier --write"
  }
}
