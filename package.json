{
  "name": "@hyperjumptech/monika",
  "description": "Synthetic monitoring made easy",
  "version": "1.6.12",
  "license": "MIT",
  "author": "@hyperjumptech",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "bin": {
    "monika": "./bin/run"
  },
  "oclif": {
    "bin": "monika"
  },
  "keywords": [
    "monika",
    "cli",
    "monitoring"
  ],
  "scripts": {
    "clean": "rm -rf coverage lib tsconfig.tsbuildinfo",
    "preinstall": "node scripts/preinstall.js",
    "pretest": "npm run check-format",
    "posttest": "eslint . --ext .ts --config .eslintrc",
    "prepack": "npm run clean && tsc -b && oclif-dev readme",
    "start": "npm run prepack && ./bin/run",
    "test": "npm run clean && cross-env NODE_ENV=test nyc --reporter=lcov --extension .ts mocha --config .mocharc.json --forbid-only \"{src,test}/**/*.test.ts\"",
    "cli-test": "npx bats test/bats/cli.bats",
    "prod_test": "cross-env NODE_ENV=test nyc --extension .ts mocha --forbid-only \"prod_test/**/*.test.ts\"",
    "version": "oclif-dev readme && git add README.md",
    "format": "prettier --write .",
    "check-format": "prettier --check .",
    "pkg": "npm run prepack && pkg . --compress brotli"
  },
  "dependencies": {
    "@oclif/command": "^1.8.0",
    "@oclif/config": "^1.17.0",
    "@oclif/errors": "^1.3.5",
    "@oclif/plugin-help": "^3.2.2",
    "@sendgrid/mail": "^7.4.2",
    "@types/chai-spies": "^1.0.3",
    "axios": "^0.21.1",
    "boxen": "^5.0.0",
    "chokidar": "^3.5.1",
    "cli-table3": "^0.6.0",
    "cli-ux": "^5.5.1",
    "date-fns": "^2.23.0",
    "express": "4.17.1",
    "filtrex": "^2.2.3",
    "form-data": "^4.0.0",
    "getos": "3.2.1",
    "handlebars": "^4.7.7",
    "helmet": "4.6.0",
    "is-url": "^1.2.4",
    "joi": "^17.4.0",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "macaddress": "^0.5.2",
    "mailgen": "^2.0.15",
    "mailgun.js": "^3.5.4",
    "node-cron": "3.0.0",
    "nodemailer": "^6.5.0",
    "os-name": "4.0.1",
    "p-event": "^4.2.0",
    "pako": "^2.0.3",
    "ping": "^0.4.1",
    "pino": "6.11.2",
    "pino-pretty": "4.7.1",
    "pkg": "^5.3.1",
    "prom-client": "13.1.0",
    "sinon": "^11.1.2",
    "smtp-server": "^3.8.0",
    "sqlite": "^4.0.21",
    "sqlite3": "^5.0.2",
    "ssl-checker": "2.0.7",
    "stun": "^2.1.0",
    "tslib": "^1.14.1",
    "xstate": "^4.24.0",
    "yaml": "1.10.2"
  },
  "devDependencies": {
    "@oclif/dev-cli": "^1.26.0",
    "@oclif/test": "^1.2.8",
    "@types/boxen": "^3.0.1",
    "@types/chai": "^4.2.15",
    "@types/express": "^4.17.12",
    "@types/getos": "^3.0.1",
    "@types/is-url": "^1.2.29",
    "@types/js-yaml": "^4.0.2",
    "@types/mocha": "^5.2.7",
    "@types/node": "^10.17.54",
    "@types/node-cron": "^2.0.4",
    "@types/nodemailer": "^6.4.1",
    "@types/pako": "^1.0.1",
    "@types/pino": "^6.3.6",
    "@types/sinon": "^10.0.2",
    "@types/smtp-server": "^3.5.6",
    "@types/sqlite3": "^3.1.7",
    "bats": "^1.5.0",
    "bats-assert": "^2.0.0",
    "bats-support": "^0.3.0",
    "chai": "^4.3.4",
    "chai-spies": "^1.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-oclif": "^4.0.0",
    "eslint-config-oclif-typescript": "^1.0.2",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^4.3.8",
    "lint-staged": "^10.5.4",
    "mocha": "^9.1.2",
    "msw": "^0.36.4",
    "node-request-interceptor": "^0.6.3",
    "nodemailer-mock": "^1.5.4",
    "nyc": "^15.1.0",
    "prettier": "2.5.1",
    "ts-node": "^10.4.0",
    "typescript": "4.4.4"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "files": [
    "/bin",
    "/lib",
    "/scripts",
    "/db/migrations"
  ],
  "homepage": "https://github.com/https://github.com/hyperjumptech/monika",
  "bugs": "https://github.com/https://github.com/hyperjumptech/monika/issues",
  "repository": "https://github.com/hyperjumptech/monika",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": [
      "node scripts/add-license.js",
      "eslint --cache"
    ],
    "*.{ts,js,css,md}": "prettier --write"
  },
  "pkg": {
    "scripts": [
      "./lib/**/*.js"
    ],
    "assets": [
      "./db/migrations/*.sql"
    ],
    "targets": [
      "node12-linux-x64",
      "node12-macos-x64",
      "node12-win-x64"
    ],
    "outputPath": "dist"
  }
}
